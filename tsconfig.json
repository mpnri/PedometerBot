{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": { "~/*": ["./src/*"] },
    "rootDir": "./src"
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
